<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionMenuTextColor">@color/menu_color</item>
        <item name="android:textColorSecondary">@color/menu_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/txtColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="splashTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_bcg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="MyEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/teal_500</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert" />

    <style name="MyAlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert" tools:keep="@style/MyAlertDialogStyle">
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?attr/colorAccent</item>
    </style>

    <style name="app_about_text">
        <item name="android:layout_marginStart">@dimen/app_about_m</item>
        <item name="android:layout_marginEnd">@dimen/app_about_m</item>
        <item name="android:fontFamily">@font/loboster</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:textSize">@dimen/about_app_txt</item>
    </style>

</resources>
